<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Video Send</title>

    <link rel="stylesheet" href="style.css" />
    <link rel="stylesheet" href="modal.css" />
    <link rel="preconnect" href="https://fonts.gstatic.com" />
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600&display=swap"
      rel="stylesheet"
    />

    <script src="/socket.io/socket.io.js"></script>

    <script src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"></script>

    <script src="https://kit.fontawesome.com/c939d0e917.js"></script>

    <script>
      const ROOM_ID = "<%= roomId %>";
    </script>
  </head>
  <body>
    <div class="main">
      <div class="main__left">
        <div class="main__videos">
          <div id="video-grid">

 


          </div>
        </div>

        <div class="main__controls">
          <div class="main__controls__block">
            <div
              onclick="muteUnmute()"
              class="main__controls__button main__mute_button"
            >
              <i class="fas fa-microphone"></i>
              <span>Mute</span>
            </div>
            <div
              onclick="playStop()"
              class="main__controls__button main__video_button"
            >
              <i class="fas fa-video"></i>
              <span>Stop Video</span>
            </div>
          </div>

          <div class="main__controls__block">
            <div class="main__controls__button">
              <i class="fas fa-user-friends"></i>
              <span>Friends</span>
            </div>
          </div>

          <div class="main__controls__block">
            <div onclick="showChat()"class="main__controls__button">
              <i class="fas fa-comment-alt"></i>
              <span>Chat</span>
            </div>
            <div id="modal-btn" class="main__controls__button leaveBtn">
              <i class="fas fa-sign-out-alt " style="color: red"></i>

              <span class="leave_meeting">Leave Chat</span>
            </div>
          </div>
        </div>
      </div>

      <div class="main__right">
        <div class="main__header">

          <div onclick="hideChat()" class="chat_close"><i class="fas fa-times-circle"></i></div>
          <h2>Chat</h2>
        </div>
        <div class="main__chat_window">
          <ul class="messages">
           
            
          </ul>
        </div>
        <div class="main__message_container">
          <input
            id="chat_message"
            type="text"
            placeholder="Type message here..."
          />

          <div></div>

        </div>
      </div>
    </div>

    <div id="my-modal" class="modal">
      <div class="modal__content">
        <div class="modal__body">
          <i class="fas fa-times-circle close"></i>
          <h2>Leaving Video</h2>

          <p>Are you sure you want to leave the room?</p>

          <div class="button__options__block">
            <div class="button__options">
              <span> Yes </span>
            </div>
            <div   class="button__options closeBtn__two">
              <span> No </span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script src="script.js"></script>
  </body>
</html>
